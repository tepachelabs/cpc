mixin nav-item(uri, label)
    if path === uri
        li.nav-item.active
            a.nav-link(href=uri)= label
            span.sr-only (current)
    else
        li.nav-item
            a.nav-link(href=uri)= label

mixin header
    header
        .navbar.navbar-expand-lg.navbar-dark.bg-custom.fixed-top.shadow
            .container
                a.navbar-brand(href="/") Culto al Perro Café
                button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                        +nav-item('/', 'Inicio')
                        +nav-item('/menu', 'Menú')
                        +nav-item('/frecuentes', 'Frecuentes')
                        +nav-item('/r/contacto', 'Contacto')

